<Application x:Class="SignalGeneratorApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SignalGeneratorApp.Converters">
    <Application.Resources>

        <!-- Цветовые ресурсы -->
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FAFAFF"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#D1D9E6"/>
        <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#E6F0FF"/>
        <SolidColorBrush x:Key="InfoBorderBrush" Color="#B3D9FF"/>

        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#2B7AFC"/>
        <SolidColorBrush x:Key="DangerButtonBrush" Color="#FF4D4D"/>
        <SolidColorBrush x:Key="WarningButtonBrush" Color="#FFA500"/>

        <!-- Базовые стили -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,2,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Базовый стиль валидации -->
        <Style x:Key="BaseValidationStyle" TargetType="Control">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <Border BorderBrush="Red" BorderThickness="2">
                            <AdornedElementPlaceholder/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" 
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Специализированные стили -->
        <Style x:Key="ValidationTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource BaseValidationStyle}">
            <Setter Property="Margin" Value="0,2,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="ValidationSliderStyle" TargetType="Slider" BasedOn="{StaticResource BaseValidationStyle}">
            <Setter Property="Margin" Value="0,2,0,5"/>
        </Style>

        <!-- Стиль для DataGrid в истории сигналов -->
        <Style x:Key="HistoryDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F9FF"/>
            <!-- ✅ Чередование строк -->
            <Setter Property="AlternationCount" Value="2"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="0">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F5F9FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Заголовки DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E6F0FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <!-- Ячейки DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Конвертеры (оставлены без изменений) -->
        <converters:StringToNullableDoubleConverter x:Key="NullableDoubleConverter"/>
        <converters:EnumToDisplayNameConverter x:Key="EnumToDisplayNameConverter"/>
        <converters:ANDBooleanToBooleanConverter x:Key="ANDBooleanToBooleanConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>

    </Application.Resources>
</Application>